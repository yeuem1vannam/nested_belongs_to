    <%= f.label :ticket_id %><br>
    <%= f.fields_for :ticket, (f.object.ticket || f.object.build_ticket) do |tf| %>
      <%= tf.hidden_field :id %>
      <%= tf.label :concert_type %>
      <%= tf.text_field :concert_type %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
